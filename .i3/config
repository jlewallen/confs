# client.focused_inactive $bg-color           $bg-color          $inactive-text-color #00ff00
# client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

bar {
    position top
    status_command i3blocks
    tray_output LVDS

    colors {
        background #232323
        statusline #DCDCDC
    }
}

# background
exec --no-startup-id xsetroot -solid "#000000"
