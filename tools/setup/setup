#!/bin/bash

# General stuff.

sudo apt-get install \
	apt-transport-https \
	ca-certificates \
	curl \
	software-properties-common -y

curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -

sudo add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"

sudo add-apt-repository ppa:kelleyk/emacs

sudo apt-get update

# Desktop

sudo apt-get install -y emacs26 freecad htop pulseaudio-module-bluetooth blueman pavucontrol

# Dev

sudo apt-get install -y gdb-multiarch gcc-arm-none-eabi qemu qemu-system git-gui pkg-config doxygen libssl-dev libncurses5-dev libncursesw5-dev ruby cmake

# System

sudo apt-get install -y nfs-kernel-server nfs-common xclip xsel python-tk ghostscript zsh docker-ce

# Window Manager and Graphical

sudo apt-get install -y i3 i3blocks ranger ditaa pcmanfm nemo xfce4-session xfce4-settings fonts-noto xfonts-terminus 

# Tools

sudo apt-get install -y colordiff p7zip tmux tmuxinator vim git git-gui gitk parallel curl jq htop gnuplot microcom dropbear-bin at

# Ledger/Finances

sudo apt-get install -y ledger hledger hledger-ui hledger-web python-ledger

# Java

sudo apt-get install -y openjdk-8-jdk openjdk-11-jdk

# Python

sudo apt-get install -y python-pip python3-pip python-protobuf

pip install s-tui --user
pip install pulsectl --user

# Disable ModemManager, which interferes with Arduino/MCU work.

systemctl stop ModemManager
systemctl disable ModemManager.service
# Trying this out for now as well.
sudo rm /lib/udev/rules.d/*mtp*

# Pretty fonts and stuff.

cd /etc/fonts/conf.d
sudo rm 70-no-bitmaps.conf
sudo ln -s ../conf.avail/70-yes-bitmaps.conf .

fc-cache -vf
sudo fc-cache -vf

# TODO: Setup go first

# Some random golang tools.

go get -u github.com/cjbassi/gotop
go get gopkg.in/Netflix-Skunkworks/go-jira.v1/cmd/jira

# Setup gtags/ctags

pushd ~/tools
sudo apt install -y install exuberant-ctags python-pygments
wget http://tamacom.com/global/global-6.6.3.tar.gz
tar xf global-6.6.3.tar.gz
cd global-6.6.3
./configure --with-exuberant-ctags=/usr/bin/ctags
make -j4
sudo make install
popd
