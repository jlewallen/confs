#!/bin/bash

set -e

pushd /home/jlewallen/jlewallen/playlist-generator

if [ -f generator ]; then
	./generator

	echo "copying new playlists"
	cp playlists.json .cache
	rsync -vua .cache/*.json ~/sync/personal/jacoblewallen.com/content/music
	rsync -vua .cache/*.json ~/sync/personal/jacoblewallen.com/public/music
fi

popd

echo "uploading site"
pushd ~/sync/personal
make upload
popd
